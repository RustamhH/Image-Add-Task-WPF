<Page x:Class="Image_Adding_Task.Views.AddImagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Image_Adding_Task.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddImagePage">

    <Grid>
        <Image Source="{Binding FilePath}" Height="100" Width="100"></Image>
        <Button Content="Search" Width="200" Height="30" VerticalAlignment="Bottom" Margin="10" Command="{Binding FileDialogCommand}"></Button>
    </Grid>
</Page>
